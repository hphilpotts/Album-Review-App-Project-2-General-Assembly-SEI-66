<h1 class="large-heading"> Reviews </h1>

<div class="container">
    <div class="row">
        <div class="col-4">
            <% reviews.forEach(function(review){ %>
            <div class="card">
                <% review.album.forEach(function(element) { %>
                    <div>
                        <a href="/review/detail?id=<%= review._id %>">
                            <img class="album-icon card-img-top"src="<%= element.albumCover%>" alt="<%= element.title %>: album cover.">
                        </a>
                    </div>
                <% }) %>
                <div class="card-body">
                    <% review.album.forEach(function(album) { %> 
                        <div> <a href="/review/detail?id=<%= review._id %>"><h2 class="highlighted-text card-title"><%= album.title %></h2></a> </div>
                    <% }) %>
                    <div> <h3 class="review-rating"><%= review.rating %></h3></div>
                    <div class="review-box">
                        <div class="review-preview card-text"><%= review.content %></div>
                    </div>
                </div>
                <div class="card-footer">
                    <div>
                        <% review.createdBy.forEach(function(createdBy) { %> 
                            <div><h4><%= createdBy.username %></h4> </div>
                        <% }) %>
                    </div>
                    <div> <%= moment(review.createdAt).fromNow() %></div>
                </div> 
                
            </div>
            <% }) %>
        </div>
    </div>
</div>            


        



