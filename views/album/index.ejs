<h2>Albums</h2>
<br>

<!-- Using a table for now to check data works ok
-- will certainly be changing format further down the line! -->
<table class="table table-striped align-middle">
    <tr>
        <th>Album Cover</th>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <!-- hidden tracklist as it is probably not needed in index -->
        <!-- <th>Track List</th> -->
        <!-- <th>Album Cover</th> -->
        <th>Genres</th>
        <!-- <th>Reviews</th> -->
        <th>Edit</th>
        <th>Delete</th>
    </tr>
<% albums.forEach(function(album) { %> 
    <tr>
        <td><img class="album-icon"src="<%= album.albumCover%>" alt="<%= album.title %>: album cover."></td>
        <td> <a class="peach" href="/album/detail?id=<%=album._id%>" > <h3><%= album.title %></h3></a></td>
        <td> <%= album.artist %></td>
        <td> <%= album.year %></td>
        <!-- <td> <%= album.trackList %></td> -->
        <!-- <td> <%= album.albumCover %></td> -->
        <td>
            <ul>
<% album.genre.forEach(function(genre) { %>
                <li><%= genre %></li>
<% }) %>
            </ul>
        </td>
        <!-- <td> <%= album.review %></td> -->
        <td> <a href="/album/edit?id=<%= album._id%>">Edit</a></td>
        <td> <a href="/album/delete?id=<%= album._id%>">Delete</a></td>
    </tr>
<% }) %>

</table>