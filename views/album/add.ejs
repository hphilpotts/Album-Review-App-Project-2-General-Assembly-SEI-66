<h1 class="large-heading text-center"> Add Album </h1>

<form method="POST" action="/album/add" class="auth-form med-text small-shadow" style="margin-top: 30px;">

    <div class="form-group">
        <label>Title</label>
        <input type="text" name="title" class="form-control"/>
    </div>

    <div class="form-group">
        <label>Artist</label>
        <input type="text" name="artist" class="form-control"/>
    </div>
        <!-- multer  -->
    <div class="form-group">
            <label>Album Cover </label>
            <input type="text" name="albumCover" class="form-control mobile-small-text">
    </div>

    <div class="form-group">
        <label>Year</label>
        <input type="number" name="year" class="form-control" min="1900" max="2023"/>
    </div>

    <div class="form-group">
        <div id="track-parent">
        <label>Track List</label>
        <input type="text" name="trackList" class="form-control" id="track1"/>
        </div>
        <button type="button" id="add-field" class="btn btn-light add-btn">+</button>
    </div class="form-group">
    <br>

    <div class="form-group">

    <div class="form-group">
        <div id="genre-parent">
        <label>Genre</label>
        <input type="text" name="genre" class="form-control"/>
        </div>
        <button type="button" id="add-genre" class="btn btn-light add-btn">+</button>
    </div>
    <br>
    <input type="submit" class="btn btn-dark" name="Submit Album"></input>

</form>

<script
  src="https://code.jquery.com/jquery-3.6.1.min.js"

  integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
  crossorigin="anonymous"></script>
<script src="/js/main.js"></script>



